            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            font-weight: bold;
        }

        .projects, .about, .contact {
            padding: 2rem;
        }

        .projects h2, .about h2, .contact h2 {
            text-align: center;
            margin-bottom: 2rem;
        }

        .project-list {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
        }

        .project-item {
            background: #fff;
            padding: 1.5rem;
            border: 1px solid #ddd;
            border-radius: 8px;
            width: 30%;
            margin: 1rem;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .project-item img {
            max-width: 100%;
            border-radius: 8px;
        }

        .project-item h3 {
            margin-top: 1rem;
        }

        .contact form {
            max-width: 600px;
            margin: 0 auto;
        }

        .contact label {
            display: block;
            margin-bottom: 0.5rem;
        }

        .contact input, .contact textarea {
            width: 100%;
            padding: 0.75rem;
            margin-bottom: 1rem;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .contact button {
            background-color: #4facfe;
            color: #fff;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        footer {
            text-align: center;
            background-color: #333;
            color: #fff;
            padding: 1rem;
